<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/connect_fragment_layout"
              android:layout_width="@dimen/inserted_fragment_width"
              android:layout_height="fill_parent"
              android:minHeight="200dp"
              android:minWidth="400dp"
              android:alpha=".95"
              android:background="@drawable/boxbg"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
            android:id="@+id/network_name"
            style="@style/Wftext.large"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="SSID">
    </TextView>

    <TextView
            android:id="@+id/password_summary"
            style="@style/Wftext"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:text="@string/passwd_entry_text"/>

    <EditText
            android:id="@+id/password"
            style="@style/Wftext.header"
            android:editable="true"
            android:inputType="textPassword"
            android:password="true"
            android:singleLine="true"
            android:gravity="center_horizontal">

        <requestFocus/>
    </EditText>

    <Button
            android:id="@+id/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alpha="30"
            android:text="@string/add"/>

</LinearLayout>